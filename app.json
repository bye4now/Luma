{
  "expo": {
    "name": "LUMA",
    "slug": "luma",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/LUMA_App_Icon_512px.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
    "package": "com.jillb.luma"
   },
  "splash": {
      "image": "./assets/images/LUMA_App_Icon_512px.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B9FBD"
     }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.rork.voice-journal-horoscope",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/LUMA_App_Icon_512px.png",
        "backgroundColor": "#0B9FBD"
      },
      "package": "app.rork.voice-journal-horoscope",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://rork.com/"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
 }